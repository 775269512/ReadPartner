<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grace.zhihunews"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.grace.zhihunews.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_reading"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.grace.zhihunews.ui.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.grace.zhihunews.ui.activity.BooksDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.grace.zhihunews.ui.activity.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.grace.zhihunews.ui.activity.BookInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.grace.zhihunews.ui.activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.grace.zhihunews.ui.fragment.AboutFragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.grace.zhihunews.ui.activity.PhotoActivity"
            android:theme="@style/AppTheme.NoStatusBarAndActionBar" />
        <activity
            android:name="com.grace.zhihunews.ui.activity.SearchActivity"
            android:theme="@style/AppTheme.NoStatusBarAndActionBar" />
        <activity
            android:name="com.grace.zhihunews.ui.activity.BookActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.grace.zhihunews.ui.activity.ExchangeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.grace.zhihunews.ui.activity.TeamActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.grace.zhihunews.ui.activity.FriendApplyActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.grace.zhihunews.ui.activity.CalendarActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.grace.zhihunews.ui.activity.ShowVideoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>