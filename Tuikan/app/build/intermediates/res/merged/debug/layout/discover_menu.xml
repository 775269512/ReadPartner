<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/discover_menu"
    android:layout_below="@+id/indicator"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:rowCount="1"
    android:columnCount="4"
    android:background="@color/white">

    <Button
        android:id="@+id/discover_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:text="免费"
        android:layout_columnWeight="1"
        android:textSize="16dp"
        android:drawableTop="@mipmap/ic_free"
        />

    <Button
        android:id="@+id/discover_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"

        android:layout_gravity="center"
        android:background="@color/transparent"
        android:text="排行榜"
        android:textSize="16dp"
        android:drawableTop="@mipmap/ic_rank"
        />

    <Button
        android:id="@+id/discover_vip"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"

        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:text="会员"
        android:textSize="16dp"
        android:drawableTop="@mipmap/ic_vip"
        />

    <Button
        android:id="@+id/discover_hear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_columnWeight="1"

        android:background="@color/transparent"
        android:text="听书"
        android:textSize="16dp"
        android:drawableTop="@mipmap/ic_hear"
        />

</GridLayout>