<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_normal_high">

    <ImageView
        android:id="@+id/book_img"
        android:layout_width="72dp"
        android:layout_height="104dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/book_img"
        android:layout_marginStart="@dimen/spacing_small"
        android:textSize="@dimen/font_size_normal_high"
        android:textColor="@color/gray_dark"
        android:singleLine="false" />

    <TextView
        android:id="@+id/book_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_title"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/book_img"
        android:layout_marginStart="@dimen/spacing_small"
        android:textSize="@dimen/font_size_middle"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/book_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_introduce"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/book_img"
        android:layout_marginStart="@dimen/spacing_small"
        android:textSize="@dimen/font_size_middle" />


</RelativeLayout>
