<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <Button
        android:id="@+id/team_new_friend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/team_data"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="10dp"
        android:text="新的书友"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_large_high"
        android:textAlignment="textStart"
        android:drawableStart="@mipmap/ic_add_friend"
        android:drawableEnd="@mipmap/ic_friend_next"
        android:background="@color/transparent"/>

    <View
        android:layout_below="@id/team_new_friend"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/md_grey_300">
    </View>

    <Button
        android:id="@+id/team_my_friend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:enabled="false"
        android:layout_below="@id/team_new_friend"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="10dp"
        android:text="我的书友"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_large_high"
        android:textAlignment="textStart"
        android:drawableStart="@mipmap/ic_friend"
        android:background="@color/transparent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/team_my_friend"
        android:background="@color/md_grey_300">
    </View>

</RelativeLayout>