<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_world"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_commend_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader
                android:id="@+id/rv_header"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_gravity="center_horizontal|top">

                <com.zanlabs.widget.infiniteviewpager.InfiniteViewPager
                    android:id="@+id/view_pager"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:paddingTop="50dp"
                    android:paddingBottom="10dp"
                    />
                <com.zanlabs.widget.infiniteviewpager.indicator.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/view_pager"
                    android:layout_marginBottom="15dp"
                    app:radius="4dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp"
                    app:fillColor="@color/white"
                    app:pageColor="@color/transparent"
                    />

                <include layout="@layout/world_menu"/>

            </com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader>

        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/item_green">
    </android.support.v7.widget.Toolbar>
</FrameLayout>
