<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/discover_menu"
    android:layout_below="@+id/indicator"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white">

    <Button
        android:id="@+id/discover_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:background="@color/transparent"
        android:text="免费"
        android:textSize="16dp"
        android:drawableTop="@mipmap/ic_free"
        />

    <Button
        android:id="@+id/discover_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/discover_free"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:background="@color/transparent"
        android:text="排行榜"
        android:textSize="16dp"
        android:drawableTop="@mipmap/ic_rank"
        />

    <Button
        android:id="@+id/discover_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/discover_rank"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:background="@color/transparent"
        android:text="会员"
        android:textSize="16dp"
        android:drawableTop="@mipmap/ic_vip"
        />

    <Button
        android:id="@+id/discover_hear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/discover_vip"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:background="@color/transparent"
        android:text="听书"
        android:textSize="16dp"
        android:drawableTop="@mipmap/ic_hear"
        />

</RelativeLayout>