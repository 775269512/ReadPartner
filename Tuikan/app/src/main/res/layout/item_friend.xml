<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_normal_high">

    <ImageView
        android:id="@+id/friend_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_head"
        />

    <TextView
        android:id="@+id/friend_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/friend_icon"
        android:layout_marginStart="@dimen/spacing_small"
        android:textSize="@dimen/font_size_normal_high"
        android:textColor="@color/gray_dark"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/friend_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/friend_id"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/friend_icon"
        android:layout_marginStart="@dimen/spacing_small"
        android:textSize="@dimen/font_size_middle"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/friend_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/spacing_small"
        android:textSize="@dimen/font_size_normal_high"
        android:textColor="@color/item_green"
        />


</RelativeLayout>
